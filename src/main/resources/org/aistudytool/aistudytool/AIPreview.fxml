<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.aistudytool.aistudytool.AIPreviewController"
      spacing="15"
      style="-fx-background-color: #eeeeee; -fx-border-color: #BDC2C6; -fx-border-radius: 0; -fx-background-radius: 0;">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="Flashcard Preview">
        <font><Font name="Cambria Bold" size="22"/></font>
    </Label>

    <Label text="Question:" style="-fx-font-weight: bold;"/>
    <TextArea fx:id="questionArea" wrapText="true" prefHeight="80"/>

    <Label text="Answer:" style="-fx-font-weight: bold;"/>
    <TextArea fx:id="answerArea" wrapText="true" prefHeight="120"/>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="addButton" text="Add to Deck" onAction="#onAdd"/>
        <Button fx:id="retryButton" text="Retry" onAction="#onRetry"/>
        <Button fx:id="cancelButton" text="Cancel" onAction="#onCancel"/>
    </HBox>

</VBox>
