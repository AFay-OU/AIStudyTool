<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.aistudytool.aistudytool.ExtractedTextDialogController"
            prefWidth="400" prefHeight="300">

    <top>
        <Label text="Review Extracted Text"
               style="-fx-font-size: 18px; -fx-padding: 10;" />
    </top>

    <center>
        <TextArea fx:id="textArea"
                  wrapText="true"
                  style="-fx-font-size: 14px;"
                  BorderPane.alignment="CENTER"/>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10;">
            <Button text="Cancel" onAction="#onCancel"/>
            <Button text="Retry" onAction="#onRetry"/>
            <Button text="Confirm" onAction="#onConfirm"/>
        </HBox>
    </bottom>

</BorderPane>
